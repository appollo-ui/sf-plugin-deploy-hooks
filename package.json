    "url": "git+https://github.com/appollo-ui/sf-plugin-deploy-hooks.git"
  },
  "bugs": {
    "url": "https://github.com/appollo-ui/sf-plugin-deploy-hooks/issues"
  },
  "keywords": [
    "salesforce",
    "sf-cli",
    "sfdx",
    "plugin",
    "deploy",
    "hooks",
    "pre-deploy",
    "post-deploy",
    "ci-cd",
    "automation",
    "ai-analysis",
    "copilot",
    "error-analysis"
  ],
