{
  "name": "@appollo-ui/sf-plugin-deploy-hooks",
  "version": "2.0.0",
  "description": "SF CLI plugin that executes configurable bash scripts before and after deploy commands with AI-powered error analysis",
  "author": "Matt Simonis",
  "license": "MIT",
  "homepage": "https://github.com/appollo-ui/sf-plugin-deploy-hooks#readme",
  "repository": {
